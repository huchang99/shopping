<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/normal_orange_color">

    <TextView
        android:id="@+id/index_top_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/home_ico_city"
        android:drawablePadding="@dimen/little_space"
        android:textColor="@color/white"
        android:text="选择城市"
        android:layout_centerVertical="true"
        android:padding="10dp"/>
    <TextView
        style="@style/title_fragment"
        android:text="首页"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/nav_scan_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nav_icon_scan_nor"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"/>


</RelativeLayout>
