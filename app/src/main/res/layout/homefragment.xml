<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/normal_orange_color">

        <TextView
            android:id="@+id/index_top_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/home_ico_city"
            android:drawablePadding="@dimen/little_space"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="选择城市"
            android:textColor="@color/white" />

        <TextView
            style="@style/title_fragment"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="首页"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/nav_scan_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/nav_icon_scan_nor" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_Entrace_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>

</LinearLayout>
