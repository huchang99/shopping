<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WelcomeGuideAct">
    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>
    <RadioGroup
        android:id="@+id/main_bottom_tabs"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <RadioButton
           android:id="@+id/main_home"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:button="@null"
           android:gravity="center"
           android:drawableTop="@drawable/main_home_selector"
           android:textColor="@drawable/main_color_selector"
           android:text="首页"
           android:scaleX="0.8"
           android:scaleY="0.8"
           />
        <RadioButton
            android:id="@+id/main_tuan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/main_tuan_selector"
            android:textColor="@drawable/main_color_selector"
            android:text="团购"
            android:scaleX="0.8"
            android:scaleY="0.8"
            />
        <RadioButton
            android:id="@+id/main_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/main_search_selector"
            android:textColor="@drawable/main_color_selector"
            android:text="发现"
            android:scaleX="0.8"
            android:scaleY="0.8"
           />
        <RadioButton
            android:id="@+id/main_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/main_my_selector"
            android:textColor="@drawable/main_color_selector"
            android:text="我的"
            android:scaleX="0.8"
            android:scaleY="0.8"
            />
    </RadioGroup>
    
</LinearLayout>